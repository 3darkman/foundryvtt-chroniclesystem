<form class="{{cssClass}}" autocomplete="off">
    {{!-- Item Sheet Header --}} {{>
    "systems/chroniclesystem/templates/items/partials/header-delete.hbs"}}
    <main class="sheet-body flexrow">
        <section class="item-stats">
            <header class="header-field">
                <span>{{localize "CS.sheets.generalLabels.details"}}</span>
            </header>
            <div class="form-group">
                <label for="system.rating">Rating:</label>
                <span class="form-fields">
                  <input
                          id="system.rating"
                          class="small-field"
                          name="system.rating"
                          type="text"
                          value="{{item.system.rating}}"
                          placeholder="Rating"
                          data-dtype="Number"
                  />
                </span>
            </div>
            <div class="form-group">
                <label for="system.penalty">Penalty</label>
                <span class="form-fields">
                  <input
                          id="system.penalty"
                          class="small-field"
                          name="system.penalty"
                          type="text"
                          value="{{item.system.penalty}}"
                          placeholder="Penalty"
                          data-dtype="Number"
                  />
                </span>
            </div>
            <div class="form-group">
                <label for="system.bulk">Bulk</label>
                <span class="form-fields">
                  <input
                          id="system.bulk"
                          class="small-field"
                          name="system.bulk"
                          type="text"
                          value="{{item.system.bulk}}"
                          placeholder="Bulk"
                          data-dtype="Number"
                  />
                </span>
            </div>
            {{> "systems/chroniclesystem/templates/items/partials/physical-item.hbs"}}
            {{> "systems/chroniclesystem/templates/items/partials/equipment-item.hbs"}}
        </section>
        <section class="description">
            {{>
            "systems/chroniclesystem/templates/items/partials/description.hbs"}}
            <header class="header-field flexrow">
                <div class="header-title">
                    <span>Qualities</span>
                </div>
                <div class="header-field-add">
                    <a class="item-quality-create" data-type="skill"><i class="fa fa-plus"></i></a>
                </div>
            </header>
            <ol class="qualities-list list resizable" data-base-size="150">

                {{#each system.qualities as |quality index|}}
                    <li class="weapon-quality item flexrow" data-item-id="{{index}}">
                        <!--suppress HtmlFormInputWithoutLabel -->
                        <input
                                class="big-field"
                                type="text"
                                name="system.qualities.{{index}}.name"
                                value="{{quality.name}}"
                                placeholder="Armor Quality Name"
                                data-dtype="String"
                        />
                        <!--suppress HtmlFormInputWithoutLabel -->
                        <input
                                class="small-field"
                                type="text"
                                name="system.qualities.{{index}}.parameter"
                                value="{{quality.parameter}}"
                                placeholder="Parameter"
                                data-dtype="String"
                        />
                        <a class="item-qualities-control item-controls" data-id="{{index}}" data-action="delete"><i class="fas fa-trash"></i></a>
                    </li>
                {{/each}}
            </ol>
        </section>
    </main>
</form>
